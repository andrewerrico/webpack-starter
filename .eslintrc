{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["react", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true,
    "jasmine": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "parser": "babylon",

        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "none",
        "useTabs": false
      }
    ],
    "no-alert": 1,
    "no-console": 1,
    "no-debugger": 1,
    "no-dupe-keys": 1,
    "no-irregular-whitespace": 1,
    "no-mixed-spaces-and-tabs": 1,
    "no-multiple-empty-lines": 1,
    "no-tabs": 1,
    "no-unused-vars": 1,

    "brace-style": ["warn", "1tbs", { "allowSingleLine": true }],
    "comma-dangle": 1,
    "dot-notation": 1,
    "eqeqeq": 1,
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"]
  }
}
